                    <polygon points="0,150 50,50 100,150" fill="lightgrey" stroke="black"></polygon>
                    <!-- right four-triangle 
                    <polygon points="50,150 150,150 100,50" fill="lightgrey" stroke="black"></polygon>
                    -->
                    <!-- top four-triangle 
                    <polygon points="25,100 125,100 75,0" fill="lightgrey" stroke="black"></polygon>
                    -->
                    <polygon points="50,50 100,50 75,100" fill="none" stroke="black"></polygon>
                    <polygon points="25,100 75,100 50,150" fill="none" stroke="black"></polygon>
                    <polygon points="125,100 75,100 100,150" fill="none" stroke="black"></polygon>
